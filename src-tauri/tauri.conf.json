{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "evently",
	"version": "1.4.25",
	"identifier": "me.araopj.evently",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"center": true,	
				"width": 1200,
				"title": "evently v1.4.25",
				"height": 650,
				"minWidth": 1200,
				"minHeight": 650,
				"resizable": true,
				"fullscreen": false,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": null,
			"capabilities": ["default"]
		}
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"targets": "all",
		"windows": {
			"webviewInstallMode": {
				"type": "embedBootstrapper"
			}
		},
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM5QzkzNkQ2QzFCQzNDRDkKUldUWlBMekIxamJKeVkvcUZmRlR3aExxTnhpYVFncTllSzQ5dUFJRFhkeXZPandEQ294bjBKQXYK",
			"endpoints": ["https://github.com/pitzzahh/evently/releases/latest/download/latest.json"],
			"windows": {
				"installMode": "passive"
			}
		}
	}
}
