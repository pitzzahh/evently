{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "evently",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "center": true,
        "title": "evently v0.1.0",
        "width": 950,
        "height": 650,
        "minWidth": 950,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/pocketbase_darwin_amd64",
      "binaries/pocketbase_darwin_arm64",
      "binaries/pocketbase_linux_amd64",
      "binaries/pocketbase_windows_amd64.exe"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM5QzkzNkQ2QzFCQzNDRDkKUldUWlBMekIxamJKeVkvcUZmRlR3aExxTnhpYVFncTllSzQ5dUFJRFhkeXZPandEQ294bjBKQXYK",
      "endpoints": [
        "https://github.com/pitzzahh/evently/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}